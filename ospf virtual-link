R1
en
config t
host R1
int eth0/1
ip add 192.168.1.100 255.255.255.0
no shutdown
!
int eth0/0
ip add 12.1.1.1 255.255.255.0
no shutdown
!
int loop1
 ip add 1.1.1.1 255.255.255.0
no shutdown
!
router ospf 100
router-id 1.1.1.1
network 12.1.1.0 0.0.0.255 area 0
network 192.168.1.0 0.0.0.255 area 0
network 1.1.1.0 0.0.0.255 area 0
do wr

